{
  "name": "web-performance-project1-initial",
  "version": "1.0.0",
  "scripts": {
    "lint": "npx eslint 'js/**/*.js'",
    "lint:fix": "npx eslint 'js/**/*.js' --fix",
    "lint:check": "npx eslint 'js/**/*.js' --max-warnings 0",
    "test": "npx jest",
    "test:watch": "npx jest --watch",
    "test:coverage": "npx jest --coverage",
    "test:ci": "npm run lint:check && npm test"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.9.0",
    "globals": "^13.24.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "overrides": {
    "globals": "^13.24.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/**/*.test.js",
      "!js/setupTests.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testEnvironmentOptions": {
      "url": "http://localhost"
    }
  }
}
